    <section class="section is-fullheight level">
        <div class="card">
           
                    <h1>{{msg}}</h1>
        <h2>This is our Home Page!</h2>
        <form class="clearfix mb-4" action="POST">
          <div class="form-group">
            <label for="tournament-game">TOURNAMENT</label>
            <input type="text" id="tournament-game" class="form-control" aria-describedby="tournament-game" placeholder="Enter tournament game">
          </div>
          <div class="form-group">
            <label for="tournament-description">DESCRIPTION</label>
            <textarea class="form-control" id="tournament-description" aria-describedby="tournament-description" placeholder="Enter Tournament description"></textarea>
            <label for="tournament-totalTeams"># OF TEAMS</label>
            <input type="text" id="tournament-totalTeams" class="form-control" aria-describedby="tournament-totalTeams" placeholder="Enter Tournament TotalTeams">
            <label for="tournament-teamSize">SIZE OF TEAMS</label>
            <input type="Text" id="tournament-teamSize" class="form-control" aria-describedby="tournament-TeamSize" placeholder="Enter Tournament TeamSize">
                        <label for="tournament-entryFee">ENTRY FEE</label>
            <input type="text" id="tournament-entryFee" class="form-control" aria-describedby="tournament-entryFee" placeholder="Enter Tournament entryFee">
                        <label for="tournament-prize">prize</label>
            <input type="text" id="tournament-prize" class="form-control" aria-describedby="tournament-prize" placeholder="Enter Tournament prize">
            <label for="tournament-Image">Image</label>
            <input type="text" id="tournament-Image" class="form-control" aria-describedby="tournament-Image" placeholder="Enter Tournament Image">
          </div>
          <button id="submit" class="btn btn-primary float-right">Submit</button>
        </form>

            
            <div class="card-content">
                <div class="media">
                    <div class="media-content">
                        <p class="title is-4 level-item">ADMIN CREATE A TOURNAMENT</p>
